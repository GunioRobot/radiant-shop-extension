- @selected = :products
- @title = 'Products - Radiant CMS - Publishing for Small Teams'
- content_for :meta do 
  = render :partial => 'head'
  
#shop_products

  %h2 Categories
  %p Products within your shop are organised in categories
  
  #shop_product_categories
    %ul#shop_product_categories_list
      %li.category#shop_product_category_guys
        %span.title 
          = link_to 'Guys', '/shop/products/categories/guys', { :id => 'shop_product-category-1', :'data-id' => '1' }
      %li.category#shop_product_category_guys
        %span.title        
          = link_to 'Gals', '/shop/products/categories/gals', { :id => 'shop_product-category-2', :'data-id' => '2' }
      %li.category#shop_product_category_guys
        %span.title        
          = link_to 'Kids', '/shop/products/categories/kids', { :id => 'shop_product-category-3', :'data-id' => '3' }
  
    #shop_product_category_create.new
      .category
        %span.title        
          = link_to 'New Category', '/shop/products/categories/kids', :class => 'new'
  
  #shop_product_container
    %form
      #shop_product_category
        %input#shop_product_category_title.textbox.clearable
        %input#shop_product_category_id.textbox.clearable{:type => 'hidden'}

      #shop_product
        #shop_product_inputs
          #shop_product_inputs_main
            %input#shop_product_title.clearable{:name => 'shop_product[title]'}
            %span#shop_product_currency $
            %input#shop_product_price.clearable{:name => 'shop_product[price]'}
          
            #shop_product_fields{:style=>"display: none"}
              %table.fieldset
                %tr
                  %th.label
                    %label{:for=>"page_slug"} handle
                  %td.field
                    %input#shop_product_handle
                  %td.actions
          %p.more_or_less
            %a{:id=>"more_shop_product_fields", :href=>"javascript: $('shop_product_fields').show(); $('less_shop_product_fields').show(); $('more_shop_product_fields').hide(); this.stop()"} More
            %a{:id=>"less_shop_product_fields", :href=>"javascript: $('shop_product_fields').hide(); $('more_shop_product_fields').show(); $('less_shop_product_fields').hide(); this.stop()", :style=>"display: none"} Hide

        #shop_product_details
          .tabs
          .details
            #shop_product_description.detail.page{'data-caption'=>"description"}
              %div
                %textarea.large.clearable#shop_product_description{:name=>"shop_product[description]", :style=>"width: 100%"}=""
            #shop_product_images.detail.page{'data-caption'=>"images"}
              %ul.images
                - 5.times do
                  %li.image
                    %img{:src => '/images/admin/shop/product_image_placeholder.png'}
              %input.clearable{:type=>"hidden",:name=>"shop_product[images][0]"}

      
        #shop_product_actions
          %input#shop_product_submit{:type => "submit"}
          %a#shop_product_delete{:href => "#"} delete
        
#shop_products_alt

  %h2 Products
  %p These are all the products you have for sale
  
  %ul#shop_products_list
    %li.product#shop_product-retro_fun
      %span.title
        = link_to 'Retro Fun T-Shirt', '/shop/products/retro_fun', { :'data-sku' => 'retro_fun', :'data-id' => '1' }
    %li.product#shop_product-retro_boring
      %span.title
        = link_to 'Retro Boring T-Shirt', '/shop/products/retro_boring', { :'data-sku' => 'retro_boring', :'data-id' => '2' }
    %li.product#shop_product-retro_cool
      %span.title
        = link_to 'Retro Cool T-Shirt', '/shop/products/retro_cool', { :'data-sku' => 'retro_cool', :'data-id' => '3' }
    %li.product#shop_product-retro_baby
      %span.title
        = link_to 'Retro Baby T-Shirt', '/shop/products/retro_baby', { :'data-sku' => 'retro_baby', :'data-id' => '4' }
  
  #shop_product_create.new
    %span.title
      = link_to 'New Product', '/shop/products/new'