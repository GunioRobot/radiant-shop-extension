- render_region :top

- render_region :form do |form|

  - form.meta do
    = render :partial => '/admin/shop/orders/edit/meta', :locals => { :f => f }
    
  - form.parts do 
    #tab_control
      #tabs.tabs
        #tab_toolbar
      #pages.pages
        = hidden_field_tag 'page_part_index_field' #important
        = render :partial => '/admin/shop/orders/edit/parts', :locals => { :f => f }
    
- render_region :bottom do |bottom|
  - bottom.buttons do
    %p.buttons{:style=>"clear: left"}
      = save_model_button(@shop_order)
      = save_model_and_continue_editing_button(@shop_order)
      = t('or')
      = link_to t('cancel'), admin_shop_orders_path
  - bottom.timestamp do
    = updated_stamp @shop_order