%li.variant.object{:id => "group_#{group.id}", :'data-id' => group.id}
  .attributes
    %span.name.attribute
    - render_region :body do |body|
      - body.name do
        %span.name.attribute= link_to group.name, edit_admin_shop_group_path(group)
      - body.modify do
        .modify
          %span.remove= link_to t('remove'), remove_admin_shop_group_path(group)