%h1
  = t('remove_group')

%p
  = t('text.remove_group.warning')

- form_for [:admin, @shop_group.becomes(ShopGroup)], :html => {:method => :delete, 'data-onsubmit_status'=>"Removing Group&#8230;"} do
  
  %p.buttons
    %input.button{:type=>"submit", :value => t('delete_group') }/
    = t('or')    
    = link_to t('cancel'), admin_shop_groups_path