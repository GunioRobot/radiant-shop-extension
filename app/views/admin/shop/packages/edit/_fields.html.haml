-#name price metadata content

- render_region :form do |form|
  - form.name do
    %p.title
      %label{:for => 'shop_package_name'}= t('name')
      = fields.text_field :name, :class => 'textbox', :maxlenth => 255
      
  - form.price do
    %p.title
      %label{:for => 'shop_package_price'}= t('price')
      = fields.text_field :price, :class => 'textbox', :maxlenth => 255, :value => number_to_currency(@shop_package.price, :unit => '', :delimiter => '') 
  
  - form.metadata do
    = render :partial => 'admin/shop/packages/edit/meta', :locals => { :fields => fields }
    
  - form.content do
    #tab_control
      #tabs.tabs
        #tab_toolbar
      #pages.pages 
        = hidden_field_tag 'page_part_index_field' #important
        = render :partial => 'admin/shop/packages/edit/part', :collection => @parts
      
- render_region :bottom do |form_bottom|
  - form_bottom.buttons do
    %p.buttons{:style=>"clear: left"}
      = save_model_button(@shop_package)
      = save_model_and_continue_editing_button(@shop_package)
      = t('or')
      = link_to t('cancel'), admin_shop_packages_path
  - form_bottom.timestamp do
    = updated_stamp @shop_package