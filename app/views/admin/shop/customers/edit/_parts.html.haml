#tab_control
  #tabs.tabs
    #tab_toolbar
  #pages.pages
    = hidden_field_tag 'page_part_index_field' #important
    - @parts.each do |part|
      .page{:id => "customer_page_#{part}", 'data-caption'=>h(part)}
        .part{:id => "customer_part_#{part}"}
          = render :partial => "admin/shop/customers/edit/parts/#{part}", :locals => { :f => f }