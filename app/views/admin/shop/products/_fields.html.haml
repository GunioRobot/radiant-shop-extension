%p.title
  %label{ :for => "product_title" }
    Title
  = fields.text_field :title, :class => 'textbox', :maxlength => 255
#extended_metadata{meta_visible(:meta)}
  %table.fieldset
    %tr
      %th.label Category
      %td.field= collection_select(:shop_product, :category_id, ShopCategory.all, :id, :title)
%p.more_or_less
  %a{:href=>'#extended_metadata',:class => "rounded_bottom_right rounded_bottom_left #{(meta_errors? ? 'more' : 'less')}"}= meta_label
  
%p.price.title
  %label{ :for => "product_price" }
    Price
  = fields.text_field :price, :class => 'textbox', :maxlength => 10  
%p.description
  %label{ :for => "product_description" }
    Description
  = fields.text_area :description, :class => 'textarea', :maxlength => 255
  
%p.buttons
  = save_model_button(@shop_product, {:label => "#{model.new_record? ? 'Create Product' : 'Save Changes'}"})
  = save_model_and_continue_editing_button(@shop_product)
  or
  = link_to "Cancel", {:action => :index}  