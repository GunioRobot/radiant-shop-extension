- include_stylesheet 'admin/extensions/shop/products/forms'
- include_stylesheet 'admin/extensions/shop/products/products'

- include_javascript 'admin/dragdrop'
- include_javascript 'admin/extensions/shop/products/products'

- @page_title = @shop_product.title + ' - ' + default_page_title

- render_region :main do |main|
  - main.edit_header do
    %h1= t('edit_product')    
  - main.edit_form do
    - form_for :shop_product, @shop_product, :url => admin_shop_product_path(@shop_product), :html => {:method => :put, :multipart => true, :id => 'edit_shop_product', 'data-onsubmit_status'=>"Saving Changes&#8230;"} do |f|
      = f.hidden_field :id
      = render :partial => 'fields', :object => f
  - main.edit_popups do
    #popups
      = render 'popup'
- render_region :sidebar do |sidebar|
  #sidebar
    = render 'sidebar'