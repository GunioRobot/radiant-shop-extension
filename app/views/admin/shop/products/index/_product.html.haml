%li.product.object{:id => "product_#{product.id}", :'data-id' => product.id}
  .attributes
    - render_region :product do |body|
      - body.move do
        %span.move.attribute
      - body.icon do
        %a{ :href => edit_admin_shop_product_path(product), :name => product.name}
          - unless product.attachments.empty?
            %img{:src => product.attachments.first.image.url(:preview), :class => 'icon'}
      - body.name do
        %span.name.attribute
          = link_to product.name, edit_admin_shop_product_path(product)
      - body.sku do
        %span.sku.attribute
          = product.sku
      - body.modify do
        .modify
          %span.remove= link_to t('remove'), remove_admin_shop_product_url(product)